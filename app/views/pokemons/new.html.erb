<% content_for :title, "Create Pokemon" %>

<div class="container">
  <h1><strong>Create Pokemon</strong></h1>

  <div class="row">
    <div class="col-md-3 col-md-9">
      <%= form_for(@pokemon) do |f|%>
      <%= render 'shared/error_messages', object: f.object%>
      <div class="field">
        <%= f.label :name%>
        <%= f.text_field :name, class: 'form-control'%>
        <%= f.label :pokedex%>
        <%= f.select :pokedex_id, options_for_select(Pokedex.all.collect{|x| [x.name, x.id]}), {}, class: "form-control" %>
 
      </div>
      <%= f.submit "Submit", class: "btn btn-primary", style: "margin-top: 10px;"%>
      <%end%>
    </div>
  </div>
</div>