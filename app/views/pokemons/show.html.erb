<% content_for :title, "#{@pokemon.name}" %>

<div class="container">
  <div class="col-md-12" style="margin-top:30px">
    <%= link_to "Edit", edit_pokemon_path, class:"btn btn-primary"%>
    <%= link_to "Delete", @pokemon, method: :delete, data: {confirm: "You sure?"}, class:"btn btn-danger"%>

    <h1 style="margin-top: 30px;margin-bottom:30px"><strong><%= @pokemon.name%></strong></h1>
    <h3>Level: <%= @pokemon.level%></h3>
    <h3>Max Health Point: <%= @pokemon.max_health_point%></h3>
    <h3>Current Health Point: <%= @pokemon.current_health_point%></h3>
    <h3>Attack: <%= @pokemon.attack%></h3>
    <h3>Defence: <%= @pokemon.defence%></h3>
    <h3>Speed: <%= @pokemon.speed%></h3>
    <h3>Current Experience: <%= @pokemon.current_experience%></h3>

    <table class="table table-hover" style="margin-top:50px">
    <tr>
      <th>Skill Name</th>
      <th>Current PP</th>
      <th></th>
      
    </tr>

    <% @pokemon_skills.each do |pokemon|%>
    <tr>
      <td> <%= pokemon.skill_id%> </td>
      <td> <%= pokemon.current_pp%> </td>
      <td>  <%= link_to "Delete", pokemon_skill_path(pokemon.skill_id) , method: :delete, data: {confirm: "You sure?"}, class:"btn btn-danger"%> </td>
    </tr>
    <% end %>
  </table>

 <div class="row">
    <div class="col-md-3 col-md-9">
    <%= form_for(@skill) do |f|%>
      <div class="field">
        <%= f.label 'Choose Skill'%>
        <%= f.select :skill_id, options_for_select(Skill.all.collect{|x| [x.name, x.id]}), {}, class: "form-control" %>
 
      </div>
      <%= f.submit "Submit", class: "btn btn-primary", style: "margin-top: 10px;"%>
    <%end%>
      </div>
  </div>
  </div>
</div>