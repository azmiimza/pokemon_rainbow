<% content_for :title, "Pokemon List" %>
<ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => ">" %>
</ol>
<div class="container">
  <h1><strong>Pokemons</strong></h1>

  <%= link_to "New Pokemon", new_pokemon_path, html_options={class: "btn btn-primary", style: "margin-top:30px; margin-bottom:30px"}%>
  <%= link_to "Heal All", heal_all_pokemons_path, method: "post", class:"btn btn-success"%>

  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Max HP</th>
      <th>Current HP</th>
      <th>Attack</th>
      <th>Defence</th>
      <th>Speed</th>
      <th>Current Experience</th>
      
    </tr>
    <% @pokemons.each do |pokemon|%>
    <tr>
      <td> <%= link_to pokemon.name, pokemon%> </td>
      <td> <%= pokemon.level%> </td>
      <td> <%= pokemon.max_health_point%> </td>
      <td> <%= pokemon.current_health_point%> </td>
      <td> <%= pokemon.attack%> </td>
      <td> <%= pokemon.defence%> </td>
      <td> <%= pokemon.speed%> </td>
      <td> <%= pokemon.current_experience%> </td>
    </tr>
    <% end %>
  </table>

  <%= will_paginate @pokemones, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>