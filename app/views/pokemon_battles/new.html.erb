<% content_for :title, "Create Battle"%>

<div class="container", style="margin-top:200px">
    <%= form_for(@pokemon_battle) do |f|%>
    <%= render 'shared/error_messages', object: f.object%>
    <div class="row">
        <div class="col-md-4">
            <%= f.label 'Select Pokemon 1'%>
            <%= f.select :pokemon1_id, options_for_select(Pokemon.all.collect{ |u| [u.name, u.id] }), {}, class: "form-control" %>
        </div>

        <div class="col-md-4 text-center">
            <h1 style="margin-top:30px;margin-bottom:50px"><strong>VS</strong></h1>
            <%= f.submit "Battle", class: "btn btn-primary", style: "margin-top: 10px;"%>
        </div>

        <div class="col-md-4">
            <%= f.label 'Select Pokemon 2'%>
            <%= f.select :pokemon2_id, options_for_select(Pokemon.all.collect{ |u| [u.name, u.id] }), {}, class: "form-control" %>
        </div>
    </div>
    <%end%>
</div>